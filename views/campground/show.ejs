<% layout('layouts/boilerplate') %>
    <div class="row">
        <div class="col-6">
            <div class="card">
                <img src="<%= results[0].imgs %>" class="card-img-top">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= results[0].title %>
                    </h5>
                    <p class="card-text">
                        <%= results[0].description %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted">
                        <%= results[0].location %>
                    </li>
                    <li class="list-group-item">
                        $<%= results[0].price %>
                    </li>
                </ul>
                <div class="card-body">
                    <form action="/campgrounds/<%= results[0].id%>?_method=DELETE" method="POST" class="d-inline">
                        <button class="btn btn-danger">DELETE</button>
                    </form>
                    <a href="/campgrounds/<%= results[0].id %>/edit" class="btn btn-primary">Edit</a>
                </div>
            </div>
        </div>
        <div class="col-6">
            <h2 class="mt-3">Leave a review</h2>
            <form action="/campgrounds/<%= results[0].id%>/reviews" method="post" class="validated-form" novalidate>
                <div class="mb-3">
                    <div class="mb-3">
                        <label for="rating" class="form-label">Rating</label>
                        <input type="range" name="rating" id="rating" min="1" max="5" class='form-range'>
                    </div>
                    <label clas='form-label' for="reviewComment">Review</label>
                    <textarea class="form-control" name="comment" id="reviewComment" cols="30" rows="3"
                        required></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <button class="btn btn-success mb-3" type="submit">Send</button>
            </form>
            <% for(let rev of resultsReviews) {%>
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">
                            <b>Rating:</b>
                            <%= rev.rating %>
                        </h5>
                        <p class="card-text">
                            <b>Comment:</b>
                            <%= rev.comment %>
                        </p>
                        <form action="/campgounds/<%= results[0].id %>/reviews/<%= rev.id%>?_method=DELETE"
                            method="POST">
                            <button class="btn btn-sm btn-danger">Delete</button>
                        </form>
                    </div>
                </div>
                <% } %>
        </div>
    </div>


    <br>